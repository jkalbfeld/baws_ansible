/**
 * This is needed for cookie based authentication to encrypt password in
 * cookie. Needs to be 32 chars long.
 */
$cfg['blowfish_secret'] = '"{{ lookup('password', '/tmp/pmasalt chars=ascii_letters length=32') }}"';
/* YOU MUST FILL IN THIS FOR COOKIE AUTH! */

/**
 * Servers configuration
 */

{% for host in hosts %}

/* Authentication type */
$cfg['Servers'][{{loop.index -1 }} ]['auth_type'] = 'cookie';

$cfg['Servers'][{{ loop.index - 1 }}]['host'] = '{{host}}';
$cfg['Servers'][{{ loop.index - 1 }}]['connect_type'] = 'tcp';
$cfg['Servers'][{{ loop.index - 1 }}]['compress'] = false;
$cfg['Servers'][{{ loop.index - 1 }}]['AllowNoPassword'] = false;


{% endfor %}


/**
 * Directories for saving/loading files from server
 */

$cfg['UploadDir'] = '{{pma_upload}}';
$cfg['SaveDir'] = '{{pma_save}}';

